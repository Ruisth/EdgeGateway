{
  "files.exclude": {
    "build": true,
    "tmp": true,
    "sstate-cache": true,
    "downloads": true
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "markdownlint.config": {
    "default": true,
    "line-length": false
  },
  "yocto.bitbakePath": "${workspaceFolder}/yocto/poky/bitbake/bin/bitbake",
  "cmake.buildDirectory": "${workspaceFolder}/build"
}
